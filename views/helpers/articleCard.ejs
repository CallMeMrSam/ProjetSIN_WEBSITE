<div class="card m-2 mt-5">
    <header class="card-header">
      <p class="card-header-title">
        <%= article.title %>
      </p>
    </header>
    <div class="card-content">
      <div class="media">
        <div class="media-left">
          <figure class="image is-48x48">
            <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
          </figure>
        </div>
        <div class="media-content">
          <p class="title is-4">John Smith</p>
          <p class="subtitle is-6">@<%= article.author %></p>
        </div>
      </div>
  
      <div class="content">
        <%= article.contentShort %>
        <br>
        <time datetime="2016-1-1"><%= article.date %></time>
      </div>
    </div>
    <footer class="card-footer">
      <a href="#" class="card-footer-item">0 likes</a>
      <a href="#" class="card-footer-item">0 commentaires</a>
    </footer>
</div>